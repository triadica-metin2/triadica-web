FROM docker.io/node:lts-alpine as node-base

WORKDIR /app

RUN addgroup --system metin2-admin-ui && \
  adduser --system -G metin2-admin-ui metin2-admin-ui

COPY dist/metin2-admin-ui/browser metin2-admin-ui
COPY ../package.json metin2-admin-ui/package.json
RUN chown -R metin2-admin-ui:metin2-admin-ui .

RUN npm --prefix metin2-admin-ui --omit=dev -f install



FROM docker.io/nginx:alpine

WORKDIR /usr/share/nginx/html

# Copy custom server configuration into the nginx conf.d directory
COPY metin2-admin-ui/nginx.dev.conf /etc/nginx/conf.d/default.conf
COPY --from=node-base /app/metin2-admin-ui .

